<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.labters.documentscanner.ImageCropActivity"
    android:background="@color/bg_default"
    android:id="@+id/contraintLayoutMainContainer">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_scan_doc_buttons"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:id="@+id/ivRetakePicture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/round_bgnd"
            android:padding="5dp"
            android:src="@drawable/ic_camera"
            app:layout_constraintEnd_toStartOf="@+id/ivDeletePage"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/secondary_button_background_color" />

        <ImageView
            android:id="@+id/ivDeletePage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/round_bgnd"
            android:padding="5dp"
            android:src="@drawable/ic_delete"
            app:layout_constraintEnd_toStartOf="@+id/ivRotate"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toEndOf="@id/ivRetakePicture"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/secondary_button_background_color" />

        <ImageView
            android:id="@+id/ivRotate"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toEndOf="@id/ivDeletePage"
            app:layout_constraintEnd_toStartOf="@+id/ivCrop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/ic_rotate"
            app:tint="@color/secondary_button_background_color"
            android:background="@drawable/round_bgnd" />

        <ImageView
            android:id="@+id/ivCrop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivRotate"
            app:layout_constraintEnd_toStartOf="@+id/ivReset"
            android:padding="5dp"
            android:src="@drawable/ic_crop"
            app:tint="@color/secondary_button_background_color"
            android:background="@drawable/round_bgnd" />

        <ImageView
            android:id="@+id/ivReset"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/round_bgnd"
            android:padding="5dp"
            android:src="@drawable/ic_restore"
            app:layout_constraintEnd_toStartOf="@+id/ivInvert"
            app:layout_constraintStart_toEndOf="@+id/ivCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/secondary_button_background_color" />

        <ImageView
            android:id="@+id/ivInvert"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivReset"
            app:layout_constraintEnd_toStartOf="@+id/ivRename"
            android:padding="5dp"
            android:src="@drawable/ic_invert_colors"
            app:tint="@color/secondary_button_background_color"
            android:background="@drawable/round_bgnd" />

        <ImageView
            android:id="@+id/ivRename"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivInvert"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="5dp"
            android:src="@drawable/ic_rename"
            app:tint="@color/secondary_button_background_color"
            android:background="@drawable/round_bgnd" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_crop_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/viewPagerScanDocument"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/ivValidateCrop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/round_bgnd"
            android:padding="5dp"
            android:src="@drawable/ic_ok"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivCancelCrop"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/secondary_button_background_color" />

        <ImageView
            android:id="@+id/ivCancelCrop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/round_bgnd"
            android:padding="5dp"
            android:src="@drawable/ic_cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivValidateCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/secondary_button_background_color" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_pager_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="@+id/viewPagerScanDocument"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout_scan_doc_buttons">

        <ImageView
            android:id="@+id/ivPreviousScanDoc"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/round_bgnd"
            android:padding="5dp"
            android:src="@drawable/ic_navigate_previous"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textViewPageCounter"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/secondary_button_background_color" />

        <TextView
            android:id="@+id/textViewPageCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivNextScanDoc"
            app:layout_constraintStart_toEndOf="@+id/ivPreviousScanDoc"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1/2" />

        <ImageView
            android:id="@+id/ivNextScanDoc"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/round_bgnd"
            android:padding="5dp"
            android:src="@drawable/ic_navigate_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewPageCounter"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/secondary_button_background_color" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerScanDocument"
        app:layout_constraintBottom_toTopOf="@+id/relative_layout_choice_buttons"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout_pager_button" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relative_layout_choice_buttons"
        app:layout_constraintTop_toBottomOf="@+id/viewPagerScanDocument"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivAddAnOtherScanToDoc"
            android:id="@+id/btnValidate"
            android:text="@string/folder_picker_choose_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Button.Primary"
            app:cornerRadius="@dimen/button_corner_radius" />

        <com.google.android.material.button.MaterialButton
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/btnClose"
            style="@style/OutlinedButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivAddAnOtherScanToDoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_cancel"
            app:cornerRadius="@dimen/button_corner_radius" />

        <ImageView
            android:id="@+id/ivAddAnOtherScanToDoc"
            android:layout_width="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnClose"
            app:layout_constraintEnd_toStartOf="@+id/btnValidate"
            android:layout_height="40dp"
            android:background="@drawable/round_bgnd"
            android:padding="5dp"
            android:src="@drawable/ic_add"
            app:tint="@color/secondary_button_background_color" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progressBarScanDocument"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:indeterminateTint="@color/primary_button_background_color"
        android:padding="100dp"
        android:visibility="gone"
        android:background="@color/halfTransparentBackground"
        app:backgroundTint="@color/primary_button_background_color"
        tools:targetApi="lollipop" />
</androidx.constraintlayout.widget.ConstraintLayout>
