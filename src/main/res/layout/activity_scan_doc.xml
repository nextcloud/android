<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.labters.documentscanner.ImageCropActivity"
    android:background="@color/bg_default"
    android:id="@+id/rlContainer">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relative_layout_scan_doc_buttons"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">
        <ImageView
            android:id="@+id/ivRotate"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivRebase"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/ic_rotate"
            app:tint="@color/secondary_button_background_color"
            android:background="@drawable/round_bgnd" />

        <ImageView
            android:id="@+id/ivRebase"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivRotate"
            app:layout_constraintEnd_toStartOf="@+id/ivInvert"
            android:padding="5dp"
            android:src="@drawable/ic_align"
            app:tint="@color/secondary_button_background_color"
            android:background="@drawable/round_bgnd" />

        <ImageView
            android:id="@+id/ivInvert"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivRebase"
            app:layout_constraintEnd_toStartOf="@+id/ivRename"
            android:padding="5dp"
            android:src="@drawable/ic_invert_colors"
            app:tint="@color/secondary_button_background_color"
            android:background="@drawable/round_bgnd" />

        <ImageView
            android:id="@+id/ivRename"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivInvert"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="5dp"
            android:src="@drawable/ic_rename"
            app:tint="@color/secondary_button_background_color"
            android:background="@drawable/round_bgnd" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:id="@+id/frameLayout"
        app:layout_constraintBottom_toTopOf="@+id/edit_text_pdffilename"
        app:layout_constraintTop_toBottomOf="@+id/relative_layout_scan_doc_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <FrameLayout
            android:id="@+id/holderImageCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"/>
        </FrameLayout>

        <com.labters.documentscanner.libraries.PolygonView
            android:id="@+id/polygonView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>
    <EditText
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:layout_constraintBottom_toTopOf="@+id/relative_layout_choice_buttons"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/edit_text_pdffilename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relative_layout_choice_buttons"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_pdffilename"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnValidateAndAddAnOtherScanToDoc"
            android:id="@+id/btnValidate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?android:selectableItemBackground"
            app:backgroundTint="@color/primary_button_background_color"
            android:shadowRadius="10"
            android:textColor="#ffffff" />
        <Button
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/btnClose"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnValidateAndAddAnOtherScanToDoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?android:selectableItemBackground"
            app:backgroundTint="@color/primary_button_background_color"
            android:shadowRadius="10"
            android:textColor="#ffffff" />
        <Button
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnClose"
            app:layout_constraintEnd_toStartOf="@+id/btnValidate"
            android:id="@+id/btnValidateAndAddAnOtherScanToDoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?android:selectableItemBackground"
            app:backgroundTint="@color/primary_button_background_color"
            android:shadowRadius="10"
            android:textColor="#ffffff" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/halfTransparentBackground"
        android:padding="100dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
