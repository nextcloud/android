<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/widget_margin"
    android:background="@drawable/rounded">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widget_accountLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/actionsLinearLayout"
        android:layout_toLeftOf="@+id/actionsLinearLayout">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/widget_app_button"
            android:src="@mipmap/ic_launcher"
            android:adjustViewBounds="true"
            android:maxWidth="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="8dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView android:id="@+id/appwidget_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/widget_text_color"
                android:textSize="20dp"
                android:textStyle="bold"
                android:contentDescription="@string/appwidget_title_content_description" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="@string/empty"
                android:id="@+id/widget_username"
                android:textColor="@color/widget_text_color"
                android:singleLine="true" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/actionsLinearLayout"
        android:layout_centerVertical="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/widget_upload"
            android:src="@drawable/ic_action_upload"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:maxWidth="32dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/widget_create"
            android:src="@drawable/ic_action_create_dir"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:maxWidth="32dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/widget_refresh"
            android:src="@drawable/ic_action_refresh"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:maxWidth="32dp" />
    </LinearLayout>

</RelativeLayout>