<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <size android:height="@dimen/player_progress_drawable_height" />
            <corners android:radius="@dimen/player_progress_drawable_radius" />
            <solid android:color="@color/player_progressbar_background_color" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <size android:height="@dimen/player_progress_drawable_height" />
                <corners android:radius="@dimen/player_progress_drawable_radius" />
                <solid android:color="@color/player_accent_color" />
            </shape>
        </clip>
    </item>
</layer-list>