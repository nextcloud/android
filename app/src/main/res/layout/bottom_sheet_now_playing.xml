<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_now_playing"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/aedinex_dark_grey"
    android:elevation="8dp"
    android:padding="12dp"
    android:clickable="true"
    android:focusable="true"
    app:behavior_hideable="true"
    app:behavior_peekHeight="72dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <!-- Album Art -->
    <ImageView
        android:id="@+id/img_mini_album_art"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_gallery"
        android:contentDescription="@string/music_info_album"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Track Info -->
    <LinearLayout
        android:id="@+id/layout_track_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@id/img_mini_album_art"
        app:layout_constraintEnd_toStartOf="@id/btn_mini_play_pause"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/txt_mini_track_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/aedinex_white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Song Title" />

        <TextView
            android:id="@+id/txt_mini_track_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/aedinex_cyan"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Artist Name" />

    </LinearLayout>

    <!-- Play/Pause Button -->
    <ImageButton
        android:id="@+id/btn_mini_play_pause"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_media_play"
        android:tint="@color/aedinex_cyan"
        android:contentDescription="@string/music_player_play"
        app:layout_constraintEnd_toStartOf="@id/btn_mini_next"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Next Button -->
    <ImageButton
        android:id="@+id/btn_mini_next"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_media_next"
        android:tint="@color/aedinex_white"
        android:contentDescription="@string/music_player_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
