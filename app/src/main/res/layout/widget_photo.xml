<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/photo_widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/photo_widget_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/photo_widget_content_description"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_image_outline" />

    <!-- Text overlay: location + date at bottom-left -->
    <LinearLayout
        android:id="@+id/photo_widget_text_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="48dp"
        android:paddingBottom="12dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/photo_widget_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:shadowColor="#CC000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:visibility="gone"
            tools:text="Jakarta, Indonesia"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/photo_widget_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:shadowColor="#CC000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="16 Feb 2026" />

    </LinearLayout>

    <!-- Next image button at bottom-right -->
    <ImageView
        android:id="@+id/photo_widget_next_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/photo_widget_next_image"
        android:padding="6dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_skip_next" />

</FrameLayout>
