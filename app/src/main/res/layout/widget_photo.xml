<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/photo_widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/photo_widget_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/photo_widget_content_description"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_image_outline" />

    <!-- Text overlay: location + date at bottom-left -->
    <LinearLayout
        android:id="@+id/photo_widget_text_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="48dp"
        android:paddingBottom="12dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/photo_widget_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:shadowColor="#CC000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:visibility="gone"
            tools:text="Jakarta, Indonesia"
            tools:visibility="visible" />

    </LinearLayout>

    <!-- Next image button at top-right -->
    <ImageView
        android:id="@+id/photo_widget_next_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/photo_widget_next_image"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:background="@drawable/bg_widget_button_circle"
        android:tint="@android:color/white"
        android:src="@drawable/ic_action_refresh" />

    <!-- Loading indicator -->
    <ProgressBar
        android:id="@+id/photo_widget_loading"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateTint="@android:color/white"
        android:visibility="gone"
        tools:visibility="visible" />

</FrameLayout>
