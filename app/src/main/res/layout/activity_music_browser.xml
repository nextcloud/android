<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_default">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/aedinex_dark_grey"
            app:titleTextColor="@color/aedinex_white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            tools:title="Music Library" />

        <!-- Tabs -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/aedinex_dark_grey"
            app:tabTextColor="@color/aedinex_white"
            app:tabSelectedTextColor="@color/aedinex_cyan"
            app:tabIndicatorColor="@color/aedinex_cyan"
            app:tabMode="fixed">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/music_library_songs" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/music_library_artists" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/music_library_albums" />

        </com.google.android.material.tabs.TabLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Search Bar -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:boxBackgroundColor="@color/nc_grey"
                app:boxStrokeColor="@color/aedinex_cyan"
                app:hintTextColor="@color/aedinex_cyan">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/appbar_search_in"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/aedinex_cyan"
                    android:textColor="@color/text_color" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Library Stats -->
            <LinearLayout
                android:id="@+id/layout_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/txt_tracks_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/aedinex_cyan"
                    android:textSize="12sp"
                    android:gravity="center"
                    tools:text="523 Songs" />

                <TextView
                    android:id="@+id/txt_artists_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/aedinex_cyan"
                    android:textSize="12sp"
                    android:gravity="center"
                    tools:text="87 Artists" />

                <TextView
                    android:id="@+id/txt_albums_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/aedinex_cyan"
                    android:textSize="12sp"
                    android:gravity="center"
                    tools:text="124 Albums" />

            </LinearLayout>

            <!-- RecyclerView for content -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                tools:listitem="@android:layout/simple_list_item_2" />

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/layout_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:tint="@color/grey_400"
                    android:alpha="0.5"
                    android:contentDescription="@string/music_library_songs" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="No music found"
                    android:textColor="@color/grey_600"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_scan_library"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/music_settings_scan_library"
                    android:backgroundTint="@color/aedinex_blue"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button - Shuffle All -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_shuffle_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_media_play"
        app:tint="@color/white"
        app:backgroundTint="@color/aedinex_blue"
        android:contentDescription="@string/music_player_shuffle" />

    <!-- Now Playing Bottom Sheet -->
    <include
        layout="@layout/bottom_sheet_now_playing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
