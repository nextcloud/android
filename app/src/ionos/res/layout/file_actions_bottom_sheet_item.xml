<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_upload_files"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_sheet_default_item_height"
    android:layout_marginStart="@dimen/bottom_sheet_default_item_horizontal_margin"
    android:layout_marginEnd="@dimen/bottom_sheet_default_item_horizontal_margin"
    android:clickable="true"
    android:background="@drawable/dialog_item_background"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/bottom_sheet_default_item_horizontal_padding"
    android:focusable="true"
    android:orientation="horizontal"
    android:paddingRight="@dimen/bottom_sheet_default_item_horizontal_padding">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/bottom_sheet_default_icon_width"
        android:layout_height="@dimen/bottom_sheet_default_icon_height"
        android:contentDescription="@null"
        tools:src="@drawable/ic_file_action_remove_file" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/bottom_sheet_default_text_horizontal_margin"
            android:textColor="@color/ionos_default_text_color"
            android:textSize="@dimen/dialog_default_text_size"
            android:textStyle="bold"
            tools:text="Delete file" />

        <TextView
            android:id="@+id/text_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/bottom_sheet_default_text_horizontal_margin"
            android:textColor="@color/ionos_secondary_text_color"
            android:textSize="@dimen/dialog_secondary_text_size"
            android:visibility="gone"
            tools:text="Some additional action info"
            tools:visibility="visible" />

    </LinearLayout>

</LinearLayout>
